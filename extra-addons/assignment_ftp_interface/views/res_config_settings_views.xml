<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_assignment_ftp" model="ir.ui.view">
            <field name="name">assignment_ftp_interface.res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="CSV Importer" string="CSV Importer" name="assignment_ftp_interface" groups="base.group_system">
                        <block title="CSV File Import Settings">
                            <setting string="Import Path" help="Local path to the directory with the .csv files">
                                <field name="csv_import_path"/>
                            </setting>
                            <setting string="Delimiter" help="Delimiter to use in the .csv files">
                                <field name="csv_delimiter"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>